{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome FrontEnd",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/FrontEnd"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Account API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "PORT": "5002",
        "MONGO_ENDPOINT": "mongo://localhost:27017",
        "MONGO_USER": "root",
        "MONGO_PASSWORD": "password"
      },
      "program": "${workspaceFolder}/AccountApi/bin/www"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Authen API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "PORT": "5001",
        "ACCOUNT_ENDPOINT": "http://localhost:5002",
        "JWT_SECRET": "u7x!A%D*F-JaNdRgUkXp2s5v8y/B?E(H+KbPeShVmYq3t6w9z$C&F)J@NcQfTjWn"
      },
      "program": "${workspaceFolder}/AuthenApi/bin/www"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Resource API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "PORT": "5003",
        "ACCOUNT_ENDPOINT": "http://localhost:5002",
        "JWT_SECRET": "u7x!A%D*F-JaNdRgUkXp2s5v8y/B?E(H+KbPeShVmYq3t6w9z$C&F)J@NcQfTjWn"
      },
      "program": "${workspaceFolder}/ResourceApi/bin/www"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Web API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "PORT": "4000",
        "RESOURCE_ENDPOINT": "http://localhost:5003",
        "AUTHEN_ENDPOINT": "http://localhost:5001",
        "ACCOUNT_ENDPOINT": "http://localhost:5002",
        "REDIS_ENDPOINT": "redis://localhost",
        "JWT_SECRET": "u7x!A%D*F-JaNdRgUkXp2s5v8y/B?E(H+KbPeShVmYq3t6w9z$C&F)J@NcQfTjWn"
      },
      "program": "${workspaceFolder}/WebApi/bin/www"
    }
  ]
}